{
  "manifest_version": 3,
  "name": "Mem Pusher",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  },
  "host_permissions": ["<all_urls>", "https://chat.openai.com/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>","https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ]
}